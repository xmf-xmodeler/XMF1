parserImport XOCL;

import Languages;
import MicroJava;
import Expressions;

context Expressions

  @Class Update extends JExp
  
    @Attribute name  : String  (?) end
    @Attribute exp   : JExp    (?) end
    
    @Constructor(name,exp) ! end
    
    @Operation pprint(out)
      format(out," ~S = ",Seq{name});
      exp.pprint(out)
    end
    
  end